<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/choix_authe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2D2828">

    <!-- Auto layout, variables, and unit scale are not yet supported -->

    <ImageView
        android:id="@+id/logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/logo_description"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintDimensionRatio="14:9"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/logo_3ddy"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/connexion"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.1"
        android:text="@string/connexion"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo" />

    <Button
        android:id="@+id/inscription"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.1"
        android:text="@string/Inscription"
        app:layout_constraintLeft_toLeftOf="@id/connexion"
        app:layout_constraintRight_toRightOf="@id/connexion"
        app:layout_constraintTop_toBottomOf="@id/connexion" />


</androidx.constraintlayout.widget.ConstraintLayout>